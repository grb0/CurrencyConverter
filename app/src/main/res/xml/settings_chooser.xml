<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        android:defaultValue="@string/both_code_and_name_value"
        android:entries="@array/ui_name_names"
        android:entryValues="@array/ui_name_values"
        android:key="@string/key_ui_name"
        android:title="@string/title_ui_name"
        app:icon="@drawable/ic_coin"
        app:useSimpleSummaryProvider="true" />

    <Preference
        android:key="@string/key_dropdown_menu"
        android:summary="@string/summary_dropdown_menu"
        android:title="@string/title_dropdown_menu"
        app:icon="@drawable/ic_hide" />
</PreferenceScreen>