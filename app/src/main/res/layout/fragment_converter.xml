<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fromCurrency"
            type="ba.grbo.currencyconverter.data.models.Currency" />

        <variable
            name="currencyName"
            type="ba.grbo.currencyconverter.data.models.CurrencyName" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/converter_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.ConverterFragment">


        <include
            android:id="@+id/from_currency_chooser"
            layout="@layout/dropdown_currency_chooser"
            app:currencyName="@{fromCurrency.getCurrencyName(currencyName, context)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@{`From`}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>