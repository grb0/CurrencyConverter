<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="ba.grbo.currencyconverter.data.models.CurrencyName" />

        <variable
            name="country"
            type="ba.grbo.currencyconverter.data.models.Country" />

        <variable
            name="currencyName"
            type="String" />
    </data>

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/currency_ripple"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:mrl_rippleColor="?colorPrimary"
        app:mrl_rippleDelayClick="false"
        app:mrl_rippleDuration="@integer/anim_time">

        <TextView
            android:id="@+id/currency"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawablePadding="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:padding="16dp"
            android:text="@{country.currency.isNameInitialized ? country.currency.name : country.currency.getCurrencyName(currencyName, context)}"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            app:startDrawable="@{country.flag}"
            tools:drawableStartCompat="@sample/data.json/countries/flag"
            tools:text="@sample/data.json/countries/code" />
    </com.balysv.materialripple.MaterialRippleLayout>
</layout>
