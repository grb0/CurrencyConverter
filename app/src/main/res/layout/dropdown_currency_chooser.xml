<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dropdown_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/currency_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/border_linear_layout"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/currency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/currency_bosnia_and_herzegovina"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/ic_flag_bosnia_and_herzegovina" />

            <ImageButton
                android:id="@+id/dropdown_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_action_btn"
                android:contentDescription="@string/img_description_expand"
                android:padding="10dp"
                android:src="@drawable/ic_expand" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/currencies_card"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginTop="0.5dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/currency_layout"
            app:layout_constraintStart_toStartOf="@+id/currency_layout"
            app:layout_constraintTop_toBottomOf="@+id/currency_layout"
            app:layout_constraintVertical_bias="0.0">


            <LinearLayout
                android:id="@+id/currencies_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0.5dp"
                android:orientation="vertical"
                tools:listitem="@layout/dropdown_item">


                <EditText
                    android:id="@+id/currencies_searcher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/border_edit_text"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/search_hint"
                    android:importantForAutofill="no"
                    android:inputType="text|textNoSuggestions"
                    android:paddingStart="8dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="12dp"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/cursor_edit_text"
                    android:textSize="16sp" />

                <View style="@style/Divider" />

                <com.qtalk.recyclerviewfastscroller.RecyclerViewFastScroller
                    android:id="@+id/currencies_fast_scroller"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:handleDrawable="@drawable/thumb_fast_scroll"
                    app:handleHeight="48dp"
                    app:trackMarginEnd="2dp"
                    app:trackMarginStart="1dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/currencies"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/dropdown_item" />
                </com.qtalk.recyclerviewfastscroller.RecyclerViewFastScroller>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>