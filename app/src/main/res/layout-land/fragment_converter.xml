<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="showOnlyFavorites"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/converter_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.ConverterFragment">

        <include
            android:id="@+id/from_currency_chooser"
            layout="@layout/dropdown_currency_chooser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dropdown_swapper"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:title="@{`From`}" />

        <include
            android:id="@+id/to_currency_chooser"
            layout="@layout/dropdown_currency_chooser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dropdown_swapper"
            app:layout_constraintTop_toTopOf="@+id/from_currency_chooser"
            app:title="@{`To`}"
            tools:visibility="visible" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/currencies_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:visibility="invisible"
            app:cardElevation="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/from_currency_chooser"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="@+id/from_currency_chooser"
            app:layout_constraintTop_toBottomOf="@+id/from_currency_chooser"
            app:layout_constraintVertical_bias="0.0"
            tools:visibility="visible">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/currencies_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:listitem="@layout/dropdown_item">

                <EditText
                    android:id="@+id/currencies_searcher"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/border_edit_text"
                    android:ems="10"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/search_hint"
                    android:importantForAutofill="no"
                    android:inputType="text|textNoSuggestions"
                    android:paddingStart="12dp"
                    android:paddingTop="13dp"
                    android:paddingEnd="45dp"
                    android:paddingBottom="13dp"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/cursor_edit_text"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@+id/favorites"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/reset_searcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/currencies_searcher"
                    android:layout_alignEnd="@id/currencies_searcher"
                    android:layout_alignBottom="@id/currencies_searcher"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/ripple_reset_searcher_btn"
                    android:contentDescription="@string/close"
                    android:padding="9dp"
                    android:src="@drawable/ic_close"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/currencies_searcher"
                    app:layout_constraintEnd_toEndOf="@+id/currencies_searcher"
                    app:layout_constraintTop_toTopOf="@+id/currencies_searcher"
                    tools:visibility="visible" />

                <ImageButton
                    android:id="@+id/favorites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/heart"
                    android:padding="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/currencies_searcher"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/currencies_searcher" />

                <ImageButton
                    android:id="@+id/favorites_animation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/transparent"
                    android:padding="18dp"
                    android:src="@drawable/ic_favorite_empty"
                    app:favoritesIcon="@{showOnlyFavorites}"
                    app:layout_constraintBottom_toBottomOf="@+id/currencies_searcher"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/currencies_searcher"
                    tools:ignore="ContentDescription" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/divider_top"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/currencies_searcher"
                    tools:visibility="visible" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/currencies"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scrollbars="none"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/divider"
                    app:layout_constraintVertical_bias="0.0"
                    tools:itemCount="4"
                    tools:listitem="@layout/dropdown_item"
                    tools:visibility="visible" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <ImageButton
            android:id="@+id/dropdown_swapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/ripple_action_btn"
            android:contentDescription="@string/swap_arrows"
            android:padding="10dp"
            android:src="@drawable/ic_swap_horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/from_currency_chooser"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/from_currency_chooser" />

        <TextView
            android:id="@+id/from_currency_double"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="52.5dp"
            android:drawablePadding="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="invisible"
            app:drawableStartCompat="@drawable/ic_flag_united_arab_emirates"
            app:layout_constraintEnd_toEndOf="@+id/from_currency_chooser"
            app:layout_constraintStart_toStartOf="@+id/from_currency_chooser"
            app:layout_constraintTop_toTopOf="@+id/from_currency_chooser"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/to_currency_double"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="52.5dp"
            android:drawablePadding="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="invisible"
            app:drawableStartCompat="@drawable/ic_flag_united_arab_emirates"
            app:layout_constraintEnd_toEndOf="@+id/to_currency_chooser"
            app:layout_constraintStart_toStartOf="@+id/to_currency_chooser"
            app:layout_constraintTop_toTopOf="@+id/to_currency_chooser"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>